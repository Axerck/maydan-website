---
import Layout from '../../layouts/Layout.astro';
import { FileText, Download } from 'lucide-react';
---

<Layout title="Volume 4 | Pubblicazioni">
	<header>
		<hgroup>
			<h1>Volume 4 (2025)</h1>
			<p>Analisi Comparativa delle Lingue Semitiche</p>
