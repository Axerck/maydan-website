---
import Layout from "../../../layouts/Layout.astro";

// Fetch volumi markdown
const volumes = await Astro.glob("./*.md");

// Sort by year desc
volumes.sort(
  (a, b) => parseInt(b.frontmatter.year) - parseInt(a.frontmatter.year),
);
---

<Layout title="Issues - Maydan Journal">
  <section class="numeri-list">
    {
      volumes.map((vol) => (
        <a href={vol.url} class="numero-card">
          <div class="numero-cover-mini">
            <img
              src={vol.frontmatter.cover || "/img/placeholder-cover.jpg"}
              alt={vol.frontmatter.title}
            />
          </div>

          <div class="numero-details">
            <span class="numero-year">{vol.frontmatter.year}</span>
            <h2 class="numero-title">{vol.frontmatter.title}</h2>
            <p class="numero-desc">{vol.frontmatter.description}</p>
          </div>
        </a>
      ))
    }
  </section>
</Layout>

<style>
  .numeri-header {
    text-align: center;
    margin: 3rem 0 4rem;
  }

  .numeri-header h1 {
    font-family: Palatino, "Palatino Linotype", "Book Antiqua", serif;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .numeri-list {
    max-width: 800px;
    margin: 0 auto 5rem;
  }

  .numero-card {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    text-decoration: none;
    color: inherit;
    padding: 2rem;
    border-radius: 8px;
    transition:
      background-color 0.2s,
      transform 0.2s;
    margin-bottom: 1rem;
    border: 1px solid transparent;
  }

  .numero-card:hover {
    background-color: #fafafa;
    border-color: #eee;
    transform: translateY(-2px);
  }

  .numero-cover-mini {
    flex-shrink: 0;
    width: 120px;
  }

  .numero-cover-mini img {
    width: 100%;
    height: auto;
    display: block;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 2px;
  }

  .numero-details {
    flex: 1;
  }

  .numero-year {
    display: block;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    color: #777;
    font-size: 0.9rem;
    margin-bottom: 0.25rem;
  }

  .numero-title {
    font-family: Palatino, "Palatino Linotype", "Book Antiqua", serif;
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    color: #000;
  }

  .numero-desc {
    color: #444;
    line-height: 1.5;
    margin: 0;
  }

  @media (max-width: 600px) {
    .numero-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .numero-cover-mini {
      width: 160px;
      margin-bottom: 1rem;
    }
  }
</style>
