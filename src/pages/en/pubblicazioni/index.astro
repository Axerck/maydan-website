---
import Layout from '../../../layouts/Layout.astro';

const volumes = [
  {
    id: "vol-4",
    title: "MAYDAN VOL. 4",
    date: "February 2, 2025",
    description: "We are excited to announce the release of the fourth issue of Maydan: journal on Arab, Semitic, and Islamic worlds.",
    link: "/en/pubblicazioni/vol-4"
  },
  {
    id: "vol-3",
    title: "MAYDAN VOL. 3",
    date: "March 7, 2024",
    description: "We are excited to announce the release of the third issue of Maydan: journal on Arab, Semitic, and Islamic worlds.",
    link: "/en/pubblicazioni/vol-3"
  },
  {
    id: "vol-2",
    title: "MAYDAN VOL. 2",
    date: "February 8, 2023",
    description: "We are excited to announce the release of the second issue of Maydan: journal on Arab, Semitic, and Islamic worlds.",
    link: "/en/pubblicazioni/vol-2"
  },
  {
    id: "vol-1",
    title: "MAYDAN VOL. 1",
    date: "December 15, 2021",
    description: "Inaugural issue of Maydan Journal. Introduction to the editorial project and first fieldwork research.",
    link: "/en/pubblicazioni/vol-1"
  }
];
---

<Layout title="Issues - Rivista Maydan">
  <header class="page-header">
     <!-- Optional header content -->
  </header>

  <section class="volumes-list">
    {volumes.map((vol) => (
      <article class="volume-item">
        <div class="volume-cover-container">
            <!-- Simulated cover or real image -->
            <div class="volume-cover-placeholder">
                <span class="cover-vol-num">{vol.id.replace('vol-', '')}</span>
            </div>
        </div>
        
        <div class="volume-content">
            <h2 class="volume-title">
                <a href={vol.link}>{vol.title}</a>
            </h2>
            <div class="volume-meta">
                by <span class="author">rivistamaydan</span> / <span class="date">{vol.date}</span>
            </div>
            
            <p class="volume-desc">{vol.description}</p>
        </div>
      </article>
    ))}
  </section>
</Layout>
