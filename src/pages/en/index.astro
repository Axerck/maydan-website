---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Maydan â€“ Journal of Arab, Semitic and Islamic Worlds">
  <!-- Call for Papers / Hero Section -->
  <section class="hero" id="call-linee-guida">
    <div class="hero-inner">
      <div class="hero-layout">
        <div class="hero-text">
          <!-- <h1>Call for Papers</h1> -->
          <h2>Call for Papers Vol. 6 (2026/27)</h2>
          <p>
            <strong>Abstract deadline:</strong> 17/12/2025<br />
            <strong>Paper deadline:</strong> 13/04/2026
          </p>
          <a
            href="/pdf/calls/Call-for-papers-3_Maydan-n-6-FINALE.pdf"
            class="btn-primary"
            target="_blank">Download the Call (PDF)</a
          >
        </div>
        <div class="hero-image">
          <img
            src="/img/Call-for-papers_3-scaled.jpg"
            alt="Call for Papers Vol. 6"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Main Blocks -->
  <section class="home-grid">
    <!-- Latest Issue -->
    <article class="home-card" id="numeri">
      <h2>Maydan vol. 4, 2025</h2>
      <div class="card-images">
        <img
          src="/img/copertina4_compressed_page-0001-1.jpg"
          alt="Vol 4 Cover"
        />
      </div>
      <p>
        Issue dedicated to new perspectives on Arab, Semitic, and Islamic
        studies.
      </p>
      <a href="/en/pubblicazioni/vol-4" class="card-link">Go to Issue &rarr;</a>
    </article>

    <!-- Editorial Board Statement -->
    <article class="home-card">
      <div class="card-images">
        <img src="/img/melone_comunicato.jpg" alt="Maydan Statement" />
      </div>
      <h2>Editorial Board Statement</h2>
      <p>Statement on the decolonization of knowledge and colonial violence.</p>
      <a href="/it/comunicato" class="card-link">Read the statement &rarr;</a>
    </article>

    <!-- Other Activities -->
    <section class="home-card" id="attivita">
      <h2>Activities</h2>
      <ul class="activity-list">
        <li>Maydan and SeSaMO Study Days</li>
        <li>Online Seminars and Training</li>
        <li>Annual Call for Papers</li>
      </ul>
      <a href="/en/attivita" class="card-link">Discover all activities &rarr;</a
      >
    </section>
  </section>

  <!-- Collaborations -->
  <section class="collaborazioni">
    <h2>Maydan collaborates with:</h2>
    <div class="collab-logos">
      <a
        href="https://halqa.hypotheses.org/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/img/logo-halqa-transparent-4.png"
          alt="Halqa Logo"
          style="max-width: 120px; height: auto;"
        />
      </a>
      <a
        href="https://www.sesamoitalia.it/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/img/logo-sesamo-societa1.png"
          alt="SeSaMO Logo"
          style="max-width: 120px; height: auto;"
        />
      </a>
    </div>
  </section>
</Layout>
