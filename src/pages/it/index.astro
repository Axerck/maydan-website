---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Maydan – Rivista sui mondi arabi, semitici e islamici">
  <!-- Sezione Call for Papers / Hero -->
  <section class="hero" id="call-linee-guida">
    <div class="hero-inner">
      <div class="hero-layout">
        <div class="hero-text">
          <!-- <h1>Call for Papers</h1> -->
          <h2>Call for Papers Vol. 6 (2026/27)</h2>
          <p>
            <strong>Scadenza abstract:</strong> 17/12/2025<br />
            <strong>Scadenza elaborati:</strong> 13/04/2026
          </p>
          <a
            href="/pdf/calls/Call-for-papers-3_Maydan-n-6-FINALE.pdf"
            class="btn-primary"
            target="_blank">Scarica la Call (PDF)</a
          >
        </div>
        <div class="hero-image">
          <img
            src="/img/Call-for-papers_3-scaled.jpg"
            alt="Call for Papers Vol. 6"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Blocchi principali -->
  <section class="home-grid">
    <!-- Ultimo numero -->
    <article class="home-card" id="numeri">
      <h2>Maydan vol. 4, 2025</h2>
      <div class="card-images">
        <img
          src="/img/copertina4_compressed_page-0001-1.jpg"
          alt="Copertina Vol 4"
        />
      </div>
      <p>
        Numero dedicato alle nuove prospettive sugli studi dei mondi arabi,
        semitici e islamici.
      </p>
      <a href="/it/pubblicazioni/vol-4" class="card-link"
        >Vai al numero &rarr;</a
      >
    </article>

    <!-- Comunicato -->
    <article class="home-card">
      <div class="card-images">
        <img src="/img/melone_comunicato.jpg" alt="Comunicato Maydan" />
      </div>
      <h2>Comunicato del Comitato editoriale</h2>
      <p>
        Comunicato sulla decolonizzazione dei saperi e la violenza coloniale.
      </p>
      <a href="/it/comunicato" class="card-link">Leggi il comunicato &rarr;</a>
    </article>

    <!-- Altre attività -->
    <section class="home-card" id="attivita">
      <h2>Attività</h2>
      <ul class="activity-list">
        <li>Giornate di studio Maydan e SeSaMO</li>
        <li>Seminari e formazioni online</li>
        <li>Call for Papers annuali</li>
      </ul>
      <a href="/attivita" class="card-link">Scopri tutte le attività &rarr;</a>
    </section>
  </section>

  <!-- Collaborazioni -->
  <section class="collaborazioni">
    <h2>Maydan collabora con:</h2>
    <div class="collab-logos">
      <a
        href="https://halqa.hypotheses.org/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/img/logo-halqa-transparent-4.png"
          alt="Logo Halqa"
          style="max-width: 120px; height: auto;"
        />
      </a>
      <a
        href="https://www.sesamoitalia.it/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img
          src="/img/logo-sesamo-societa1.png"
          alt="Logo SeSaMO"
          style="max-width: 120px; height: auto;"
        />
      </a>
    </div>
  </section>
</Layout>
