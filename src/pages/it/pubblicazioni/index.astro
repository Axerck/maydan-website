---
import Layout from '../../../layouts/Layout.astro';

const volumes = [
  {
    id: "vol-4",
    title: "MAYDAN VOL. 4",
    date: "2 Febbraio 2025",
    description: "Siamo entusiaste/i di annunciare l’uscita del quarto numero di Maydan: rivista sui mondi arabi, semitici e islamici.",
    link: "/pubblicazioni/vol-4"
  },
  {
    id: "vol-3",
    title: "MAYDAN VOL. 3",
    date: "7 Marzo 2024",
    description: "Siamo entusiaste/i di annunciare l’uscita del terzo numero di Maydan: rivista sui mondi arabi, semitici e islamici.",
    link: "/pubblicazioni/vol-3"
  },
  {
    id: "vol-2",
    title: "MAYDAN VOL. 2",
    date: "8 Febbraio 2023",
    description: "Siamo entusiaste/i di annunciare l’uscita del secondo numero di Maydan: rivista sui mondi arabi, semitici e islamici.",
    link: "/pubblicazioni/vol-2"
  },
  {
    id: "vol-1",
    title: "MAYDAN VOL. 1",
    date: "15 Dicembre 2021",
    description: "Numero inaugurale della Rivista Maydan. Introduzione al progetto editoriale e prime ricerche sul campo.",
    link: "/pubblicazioni/vol-1"
  }
];
---

<Layout title="Numeri - Rivista Maydan">
  <header class="page-header">
     <!-- Optional header content if needed, kept empty to match minimal look or removed -->
  </header>

  <section class="volumes-list">
    {volumes.map((vol) => (
      <article class="volume-item">
        <div class="volume-cover-container">
            <!-- Simulated cover or real image -->
            <div class="volume-cover-placeholder">
                <span class="cover-vol-num">{vol.id.replace('vol-', '')}</span>
            </div>
        </div>
        
        <div class="volume-content">
            <h2 class="volume-title">
                <a href={vol.link}>{vol.title}</a>
            </h2>
            <div class="volume-meta">
                di <span class="author">rivistamaydan</span> / <span class="date">{vol.date}</span>
            </div>
            
            <p class="volume-desc">{vol.description}</p>
        </div>
      </article>
    ))}
  </section>
</Layout>
